@model ToucanShoes.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Detalhes do Produto</h4>
   
</div>
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="..." class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Nome)</h5>
                <p class="card-text">Descrição do produto...</p>
                <p class="small">Preço: R$@Html.DisplayFor(model => model.Preco) </p>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" class=" btn btn-primary" asp-route-id="@Model?.Id">Editar</a>
    <a asp-action="Index" class=" btn btn-danger">Voltar ao Inicio</a>
</div>
